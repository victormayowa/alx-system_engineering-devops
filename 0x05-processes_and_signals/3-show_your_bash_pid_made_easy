#!/usr/bin/env bash
# This script displays the PID and process name of processes whose name contains the word "bash".

# Loop through all directories in /proc that are numeric (representing PIDs)
for pid_dir in /proc/[0-9]*; do
    # Extract the PID from the directory path
    pid=$(basename "$pid_dir")

    # Read the process name from the cmdline file
    process_name=$(tr -d '\0' < "$pid_dir/cmdline" | grep -o 'bash' || true)

    # Output the PID and process name if it contains the word "bash"
    if [ -n "$process_name" ]; then
        echo "$pid $process_name"
    fi
done
